<%- include("partials/head.ejs") %>

<% if (locals.user) { %>
<%- include("partials/headerLogueado.ejs") %>
<% } else { %>
<%- include("partials/header.ejs") %>
<% } %>

<!-- Resultados de busqueda -->
<div class="container products-wrapper">
	<div class="row">

		<div class="col-12">
			<h2 class="products-title">Resultados de b√∫squeda</h2>
		</div>

<!-- Show resultado de busqueda -->
<%if (productos == undefined || productos==0) { %>
	<p class="resultadosnulos"> No se han encontrado resultados para su busqueda. Ingrese un nombre o descripcion valida.</p>
	<%}%>

<% for(let i=0; i<productos.length; i+=1) { %>
<div class="col-12 col-sm-6 col-lg-3">
	<section class="product-box">
		<a href="/products/detail/<%= productos[i].id %>">
			<figure class="product-box_image">
				<img src="<%= productos[i].imagen %>">
			</figure>
			<article class="product-box_data">
				<h2> <%= productos[i].Nombre %> </h2>
				<a class="creadopor" href="users/profileOthers/<%= productos[i].Usuario.id %>"> Creado por <%= productos[i].Usuario.nombre %></a>
				<p> <%= productos[i].descripcion %> </p>
			</article>
		</a>
	</section>
</div>
<% } %>

<%- include("partials/footer.ejs") %>