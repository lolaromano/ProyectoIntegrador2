<%- include("partials/head.ejs") %> 

<%- include("partials/header.ejs") %> 

	<!-- Product detail -->
	<div class="container products-wrapper">

		<div class="d-flex align-items-center">
			<h2 class="products-title">
				<%= productos[idSearch].nombre + ' ' %> Modelo <%= productos[idSearch].modelo %>
			</h2> 
			<p class="product-detail-description">
				<a href="/products/create">Agregar producto</a>
				<!-- <a href="/products/productAdd/:id">Agregar producto</a> -->
			</p>
		</div>
		

		<div class="product-detail">
			<div class="row">

				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= productos[idSearch].imagen %>"  alt="" class="product-detail-img">
					<p class="product-detail-description"> 
					<%= productos[idSearch].descripcion %>
					</p> 
				</article>

	<!-- Comentarios -->
				<div class="col-12 col-lg-4">

					<section class="comments">
						<% for (i = 0; i < productos[idSearch].comentarios.length; i++ ) { %>
							<article>
								<a href="/users/profileOthers/<%= productos[idSearch].comentarios[i].idUsuario %> ">
								<img src="<%= productos[idSearch].comentarios[i].imagenUsuario %>" alt="">
								</a>
								<div class="data">
									<p class="user">
										<strong> <a href="/users/profileOthers/<%= productos[idSearch].comentarios[i].idUsuario %> " > <%= productos[idSearch].comentarios[i].usuario %></a> </strong>
										<%= productos[idSearch].comentarios[i].comentario %> 
									</p>
								</div>
							</article>
						<% } %>
					</section>

					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<br>
						<a href="/users/profile" class="btn btn-primary" type="submit">
							AGREGAR COMENTARIO
						</a>
					</form> <br>

				</div>

			</div>		
		</div>

	</div>

<%- include("partials/footer.ejs") %> 